{
  "name": "quick_sort",
  "version": "0.0.0",
  "private": true,
  "description": "A minimalist file sorting desktop app",
  "author": {
    "name": "onetyten",
    "email": "labaekaabdulrazaq@gmail.com"
  },
  "homepage": ".",
  "type": "module",
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "electron": "electron .",
    "electron:dev": "concurrently \"tsc -w\" \"npm run dev\" \"npm run electron\"",
    "build": "tsc -b && vite build",
    "dist": "electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/vite": "^4.1.11",
    "react": "^19.1.1",
    "react-activity": "^2.1.3",
    "react-dom": "^19.1.1",
    "react-fox-toast": "^1.10.20",
    "react-icons": "^5.5.0",
    "react-outside-click-handler": "^1.3.0",
    "react-redux": "^9.2.0",
    "react-tooltip": "^5.29.1",
    "redux": "^5.0.1",
    "redux-persist": "^6.0.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/react-outside-click-handler": "^1.3.4",
    "@types/react-redux": "^7.1.34",
    "@types/redux-persist": "^4.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.0.1",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  },
  "build": {
    "appId": "io.github.onetyten.quick-sort",
    "productName": "Quicksort",
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "buildVersion": "1",
    "asar": true,
    "files": [
      "dist/**/*",
      "electron.cjs",
      "preload.js",
      "package.json",
      "Quicksort.ico",
      "Quicksort.png"
    ],
    "win": {
      "icon": "Quicksort.ico",
      "target": [{ "target": "nsis", "arch": ["x64"] }],
      "compression": "maximum"
    },
    "linux": {
      "icon": "Quicksort.png",
      "category": "Utility",
      "target": [
        { "target": "AppImage", "arch": ["x64"] },
        { "target": "deb", "arch": ["x64"] }
      ],
      "compression": "maximum"
    },
    "deb": {
      "compression": "xz"
    },
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "electronVersion": "37.2.6"
  }
}